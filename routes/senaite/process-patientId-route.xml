<routes
    xmlns="http://camel.apache.org/schema/spring">
    <route id="process-patientId" errorHandlerRef="watcherErrorHandler">
        <from uri="direct:process-patientId"/>
        
        <log message="Processing patient id" />
        
        <to uri="direct:authenticate-to-openmrs"/>
                                
        <setHeader name="CamelHttpMethod">
            <constant>GET</constant>
        </setHeader>
        
        <toD cacheSize="-1" uri="{{fhirR4.baseUrl}}/${exchangeProperty.patient-reference}"/>
        <unmarshal>
            <json library="Jackson"/>
        </unmarshal>
        
        <setProperty name="patient-id">
            <jsonpath>$.id</jsonpath>
        </setProperty>
        
    </route>
</routes>
